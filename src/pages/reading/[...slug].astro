---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const books = await getCollection('reading');
  return books.map(book => ({
    params: { slug: book.slug },
    props: { book },
  }));
}

const { book } = Astro.props;
const { Content } = await book.render();

const statusLabels = {
  reading: 'Currently Reading',
  completed: 'Completed',
  paused: 'Paused',
};
---

<BaseLayout
  title={`${book.data.title} | Reading`}
  description={book.data.description}
>
  <article class="container">
    <header class="book-header fade-in">
      <a href="/reading" class="back-link">← Back to Reading</a>

      <h1 class="book-title">{book.data.title}</h1>
      <p class="book-author">by {book.data.author}</p>

      <div class="book-meta">
        <span class={`status-badge status-${book.data.status}`}>
          {statusLabels[book.data.status]}
        </span>
        <time datetime={book.data.startDate.toISOString()}>
          Started {new Date(book.data.startDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {book.data.rating && (
          <div class="rating">
            {'★'.repeat(book.data.rating)}{'☆'.repeat(5 - book.data.rating)}
          </div>
        )}
      </div>

      {book.data.tags && (
        <div class="tags">
          {book.data.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="book-content fade-in stagger-2">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .container {
    max-width: 720px;
  }

  .book-header {
    margin-bottom: var(--space-3xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    margin-bottom: var(--space-xl);
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  .book-title {
    font-size: var(--text-3xl);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-sm);
  }

  .book-author {
    font-family: var(--font-mono);
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .book-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    flex-wrap: wrap;
    margin-bottom: var(--space-md);
  }

  .status-badge {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    letter-spacing: 0.5px;
  }

  .status-reading {
    background-color: rgba(34, 197, 94, 0.1);
    color: rgb(34, 197, 94);
    border: 1px solid rgba(34, 197, 94, 0.3);
  }

  .status-completed {
    background-color: rgba(59, 130, 246, 0.1);
    color: rgb(59, 130, 246);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .status-paused {
    background-color: rgba(234, 179, 8, 0.1);
    color: rgb(234, 179, 8);
    border: 1px solid rgba(234, 179, 8, 0.3);
  }

  [data-theme="dark"] .status-reading {
    background-color: rgba(34, 197, 94, 0.15);
    color: rgb(74, 222, 128);
  }

  [data-theme="dark"] .status-completed {
    background-color: rgba(59, 130, 246, 0.15);
    color: rgb(96, 165, 250);
  }

  [data-theme="dark"] .status-paused {
    background-color: rgba(234, 179, 8, 0.15);
    color: rgb(250, 204, 21);
  }

  time {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-faint);
  }

  .rating {
    font-size: var(--text-base);
    color: var(--color-accent);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .tag {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-accent);
    background-color: rgba(196, 93, 62, 0.1);
    padding: 2px var(--space-sm);
    border-radius: var(--radius-sm);
  }

  [data-theme="dark"] .tag {
    background-color: rgba(224, 122, 95, 0.15);
  }

  .book-content {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--color-text);
  }

  .book-content :global(h2) {
    font-size: var(--text-2xl);
    font-weight: 600;
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
  }

  .book-content :global(h3) {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
  }

  .book-content :global(p) {
    margin-bottom: var(--space-md);
  }

  .book-content :global(ul),
  .book-content :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .book-content :global(li) {
    margin-bottom: var(--space-xs);
  }

  .book-content :global(strong) {
    font-weight: 600;
    color: var(--color-text);
  }

  .book-content :global(em) {
    font-style: italic;
  }

  .book-content :global(a) {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color var(--transition-fast);
  }

  .book-content :global(a:hover) {
    border-bottom-color: var(--color-accent);
  }

  .book-content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--space-2xl) 0;
  }

  @media (max-width: 640px) {
    .book-title {
      font-size: var(--text-2xl);
    }

    .book-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-sm);
    }
  }
</style>
